{
    "nixEnvSelector.nixShellConfig": "${workspaceRoot}/dev-shell.nix",
    "gtest-adapter.debugConfig": "unit test",
    "gtest-adapter.supportLocation": true,
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": "googletest.failed",
                "settings": {
                    "foreground": "#f00"
                }
            },
            {
                "scope": "googletest.passed",
                "settings": {
                    "foreground": "#0f0"
                }
            },
            {
                "scope": "googletest.run",
                "settings": {
                    "foreground": "#0f0"
                }
            }
        ]
    }
}